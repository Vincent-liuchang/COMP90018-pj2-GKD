<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@mipmap/list_item_background"
    android:clickable="false"
    android:focusable="false">


    <ImageView
        android:id="@+id/building_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <RelativeLayout
        android:id="@+id/building_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/building_pic"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <TextView
            android:id="@+id/open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:text="8:45 am - 10:00 pm"
            android:textColor="@color/green"/>

        <TextView
            android:id="@+id/building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/open_time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:textSize="20sp"
            android:text="name"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/building_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/building_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:text="This is the most Beautiful Building"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="distance"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/people_count_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/list_item_people"/>

        <TextView
            android:id="@+id/people_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp"
            android:text="people_count"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/people_count_back"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/icon_timer"/>

        <ImageView
            android:id="@+id/printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/timer"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/icon_printer"/>

        <ImageView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/printer"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@mipmap/icon_question"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@color/mainBackground"
        android:layout_below="@id/building_content"/>


</RelativeLayout>