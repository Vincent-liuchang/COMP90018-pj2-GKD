<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/message_background">


    <ImageView
        android:id="@+id/bottle_nomessage_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:background="@mipmap/icon_back" />


    <ImageView
        android:id="@+id/bottle_nomessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/bottle_nomessage"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/why_not_write_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/bottle_nomessage"
        android:layout_marginBottom="23dp"
        android:background="@mipmap/bottle_writeone"
        android:clickable="true"/>

</RelativeLayout>